    GIT_TAG           v1.3.0
    SOURCE_DIR        "${CMAKE_CURRENT_BINARY_DIR}/googlebenchmark-src"
    BINARY_DIR        "${CMAKE_CURRENT_BINARY_DIR}/googlebenchmark-build"
    CONFIGURE_COMMAND ""
    BUILD_COMMAND     ""
    INSTALL_COMMAND   ""
    TEST_COMMAND      ""
)
